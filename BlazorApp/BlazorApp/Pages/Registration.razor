@page "/Registration"

@inject Identification identification

<link href="/css/Registration.css" rel="stylesheet" />

<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign Up</h5>
            <form id="idFormSignin" class="form-signin" action="" method="POST" onsubmit="">
              <div class="form-label-group">
                <input type="text" id="inputLogin" class="form-control" placeholder="Login" name="login" onclick="" required>
                <label for="inputLogin">Login</label>
              </div>
              <div class="container-image-checkbox">
                  <div class="image-checkbox">
                      <label class="custom-control-label" for="Man">
                        <input type="radio" class="custom-control-input" id="Man" name="Sex" hidden>
                        <img src="/img/ManPirate.svg" alt="#" class="img-Form">
                      </label>
                </div>
                <div class="image-checkbox">
                    <label class="custom-control-label" for="Woman">
                        <input type="radio" class="custom-control-input" id="Woman" name="Sex" hidden>
                        <img src="/img/WomanPirate.svg" alt="#" class="img-Form">
                    </label>
                </div>
              </div>
			 <div class="form-label-group">
                <input type="email" id="inputEmail" class="form-control" placeholder="Email" name="mail" onclick="" required>
                <label for="inputEmail">Email</label>
              </div>
              <div class="form-label-group">
                <input type="password" id="inputPassword" class="form-control" placeholder="Password" name="MDP" onclick="" required>
                <label for="inputPassword">Password</label>
              </div>

			  <div class="form-label-group">
                <input type="password" id="inputPasswordConfirm" class="form-control" placeholder="Confirm Password" onclick="" name="ConfirmMDP" required>
                <label for="inputPasswordConfirm">Confirm Password</label>
              </div>
              <div class="form-label-group btnForm d-flex justify-content-center">
                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit" >Sign Up</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
	<div>
        <div class="errorContainer">
            <!--<div class="alert alert-danger" role="alert">Les mots de passes sont différents.</div>-->
            <!--<div class="alert alert-danger" role="alert">Une erreur est survenu, veuillez réessayer.</div>-->
        </div>
    </div>

